<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttons_corner_radius" />
            <stroke android:width="@dimen/buttons_stroke_thickness" android:color="@color/strokeTransparentBlack" />
            <gradient android:angle="-90" android:startColor="@color/lightRed" android:endColor="@color/mediumRed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/buttons_corner_radius" />
            <stroke android:width="@dimen/buttons_stroke_thickness" android:color="@color/strokeTransparentBlack" />
            <solid android:color="@color/lightRed"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttons_corner_radius" />
            <stroke android:width="@dimen/buttons_stroke_thickness" android:color="@color/strokeTransparentBlack" />
            <gradient android:angle="-90" android:startColor="@color/mediumRed" android:endColor="@color/darkRed" />
        </shape>
    </item>
</selector>