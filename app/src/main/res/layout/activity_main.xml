<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/smokeWhite"
    tools:context="com.siduron.java.androidproject5777_4075_4075.MainActivity">

    <ImageView
        android:layout_width="@dimen/splash_image_width"
        android:layout_height="@dimen/splash_image_width"
        app:srcCompat="@drawable/travel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:contentDescription="Bussiness agency app" />

    <LinearLayout android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/yellow"
        android:minWidth="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Log in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LoginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/buttons_sides_margin"
            android:layout_marginRight="@dimen/buttons_sides_margin"
            android:background="@drawable/green_round_button"
            android:layout_marginBottom="20dp"
            style="@style/AlertDialog.AppCompat.Light.WhiteTextWithShadow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_centerHorizontal="true"/>
        <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterButton"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/buttons_sides_margin"
            android:layout_marginRight="@dimen/buttons_sides_margin"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:padding="0dp"
            android:height="17dp"
            android:background="@drawable/hyper_link_button"
            />
    </LinearLayout>


</RelativeLayout>
