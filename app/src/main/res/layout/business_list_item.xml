<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:id="@+id/BusinessLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:src="@drawable/bussiness"
        android:layout_gravity="center"
        android:background="@drawable/bordered_instructions_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="15dp">

        <TextView
            android:id="@+id/BusinessName"
            style="@style/EnteriesListViewText.Title"
            android:textIsSelectable="true"
            android:text="Business name"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/BusinessID"
            style="@style/EnteriesListViewText.Normal"
            android:text="000000"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/BusinessDescription"
            style="@style/EnteriesListViewText.Subtitle"
            android:textIsSelectable="true"
            android:text="Business description"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/BusinessAddress"
            android:clickable="true"
            android:background="@color/transparent"
            android:layout_height="23dp"
            android:onClick="geoSearch"
            style="@style/EnteriesListViewText.Link"
            android:text="Business address"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/BusinessPhone"
            android:textDirection="ltr"
            android:clickable="true"
            android:onClick="makeCall"
            style="@style/EnteriesListViewText.Link"
            android:text="+1507000000"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/BusinessWebsite"
            android:textDirection="ltr"
            android:clickable="true"
            android:onClick="goToWebsite"
            style="@style/EnteriesListViewText.Link"
            android:text="http://www.website.com"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/BusinessEmail"
            android:textDirection="ltr"
            android:clickable="true"
            android:onClick="sendMail"
            style="@style/EnteriesListViewText.Link"
            android:text="siduron10@gmail.com"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>