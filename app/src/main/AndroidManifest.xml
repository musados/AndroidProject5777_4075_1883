<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siduron.java.androidproject5777_4075_4075">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.siduron.java.iTravel.Controller.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.siduron.java.iTravel.Controller.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.siduron.java.iTravel.Controller.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.siduron.java.iTravel.Controller.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.siduron.java.iTravel.Controller.UserLoginActivity"
            android:label="@string/title_activity_login" />

        <provider
            android:name="com.siduron.java.iTravel.Model.Backend.iTravelContentProvider"
            android:authorities=".iTravelContentProvider"
            android:exported="true" />

        <activity
            android:name="com.siduron.java.iTravel.Controller.UserPanel"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="@string/user_panel_title" />
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>